@model Product

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Deletar Produto</h2>
            <h5 class="text-danger">Deseja realmente deletar esse produto?</h5>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" disabled class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="p-0"></label>
            <div class="form-group">
                <div class="input-group mb-3">
                    <span class="input-group-text">R$</span>
                    <input asp-for="Price" disabled class="form-control" />
                    <span class="input-group-text">,00</span>
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="p-0"></label>
                <textarea asp-for="Description" disabled class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

        <div class="row">
            <div class="col-6 col-md-6">
                <button type="submit" class="btn btn-danger form-control">Deletar</button>
            </div>
            <div class="col-6 col-md-6">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">
                    Voltar
                </a>
            </div>
        </div>
    </div>
</form>
