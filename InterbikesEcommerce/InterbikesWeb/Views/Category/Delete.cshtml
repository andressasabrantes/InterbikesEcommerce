@model Category

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary p-0">Deletar Categoria</h2>
            <h5 class="text-danger">Deseja realmente deletar essa categoria?</h5>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
        </div>

        <div class="row">
            <div class="col-6 col-md-6">
                <button type="submit" class="btn btn-danger form-control">Deletar</button>
            </div>
            <div class="col-6 col-md-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">
                    Voltar
                </a>
            </div>
        </div>
    </div>
</form>
